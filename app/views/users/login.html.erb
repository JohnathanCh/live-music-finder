<h1>Welcome to our App!</h1>

<h3>Login Please</h3>

<div style="color: white; background: rgb(0,0,0, 0.6); margin: auto; align-items: center; width: 400px; padding: 10px;">
<%= form_for :user do |f| %>
  <%= f.label_field :name, "Enter your Name" %>
  <%= f.text_field :name %>

  <%#= f.label_field :password, "Enter your Password" %>
  <%#= f.password_field :password %>
  <%= f.submit "Login" %>
<% end %>
</div>
